minting rewards

enum Redeemer { 
    Mint
    Burn 
}

// Contract parameters 
const VERSION: ByteArray = # 
const OWNER_PKH: ByteArray = #
const ownerPKH: PubKeyHash = PubKeyHash::new(OWNER_PKH)

func main(redeemer: Redeemer, ctx: ScriptContext) -> Bool {

    redeemer.switch {
        Mint => {
            ctx.tx.is_signed_by(ownerPKH).trace("RP1: ")
        },
        Burn => {
            true
        }
    }
}